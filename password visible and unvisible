var i=0;
	$('.input-group a.visibility ').click(function(){
		if(i===0){
			$(this).find('span').html('visibility');
			$(this).parent().find('input').attr('type','text');

			i=1;

		}
		else{
			$(this).find('span').html('visibility_off');
			$(this).parent().find('input').attr('type','password');
			i = 0;
			

		}

	});
